<body class="centered-form">
    <div class="centered-form__form">
        <form action="/chat">
            <div class="form-field">
                <h3>Join a chat</h3>
            </div>
            <div class="form-field">
                <label>Display name</label>
                <input type="text" name="displayName" placeholder="type display name.." autofocus required>
            </div>
            <div class="form-field">
                <label>Room name</label>
                <input type="text" list="roomName" name="roomName" placeholder="select\type room name.." autocomplete="off" required>
                <datalist id="roomName" name="roomName">

                </datalist>
            </div>
            <div class="form-field">
                <button>Join</button>
            </div>
        </form>
    </div>
</body>

<script src="/socket.io/socket.io.js"></script>
<script src="/javascripts/jquery.min.js"></script>
<script src="/javascripts/moment.js"></script>
<script src="/javascripts/mustache.js"></script>
<script src="/javascripts/deparam.js"></script>
<script src="/javascripts/index.js"></script>